#!/usr/bin/env bash
echo "#################################"
echo "Start axyl-before"
echo "#################################"

echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/axyl /etc/mkinitcpio.d/linux.preset

echo "Populate Core Team keys"
echo "#################################"
pacman-key --init
pacman-key --populate

echo "#################################"
echo "End axyl-before"
echo "#################################"
rm -f /usr/local/bin/axyl-before
